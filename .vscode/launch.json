    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "启动",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "scan",
                "./cases/",
                "--rewrite"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "测试jsx",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "scan",
                "--fixjsx",
                "--rewrite",
                "./cases/"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "测试sync",
            "program": "${workspaceFolder}/bin/cli.js",
            "args": [
                "sync",
                "--jsonpath=./resource/ZH-CN.json",
                "./cases/"
            ]
        }
    ]
}